{
  "name": "desafio-back-end",
  "version": "1.0.0",
  "main": "src/server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "start": "yarn build && node dist/main/server.js",
    "lint:eslint": "yarn eslint src/*.ts --fix",
    "lint:prettier": "prettier --write src/",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "commit": "git add . && git commit",
    "test": "jest --passWithNoTests --noStackTrace --runInBand",
    "test:unit": "yarn test -- -c jest-unit.config.js",
    "test:integration": "npm test -- -c jest-integration.config.js",
    "test:ci": "yarn test --silent  --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.4",
    "@types/mongodb": "^3.5.25",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.9"
  }
}
