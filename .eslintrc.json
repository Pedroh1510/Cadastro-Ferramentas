{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "import-helpers/order-imports": [
    "warn",
    {
      "newlinesBetween": "always", // new line between groups
      "groups": [
        "module",
        [
          "parent",
          "sibling",
          "index"
        ]
      ],
      "alphabetize": {
        "order": "asc",
        "ignoreCase": true
      }
    }
  ]
}
